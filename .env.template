# AnalystKit Environment Variables Template
# Copy this file to .env and fill in your values

# Default Plotly theme
PLOTLY_THEME=plotly

# Default Plotly renderer
PLOTLY_RENDERER=default

# Default export format
DEFAULT_EXPORT_FORMAT=svg

# Default export scale
DEFAULT_EXPORT_SCALE=2

# Path to custom fonts directory
FONT_PATH=

# OpenAI API key
OPENAI_API_KEY=

# Mapbox token for maps
MAPBOX_TOKEN=

# Default chart width
DEFAULT_CHART_WIDTH=1200

# Default chart height
DEFAULT_CHART_HEIGHT=800

# Color scheme to use
COLOR_SCHEME=bitwise
